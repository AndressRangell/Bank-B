<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_dark">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/ic_close_white_24dp" />

    <TextView
        android:id="@+id/tittlepwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/flexo_bold"
        android:text="@string/msgRecPwd"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/msgFail"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/flexo_medium"
        android:text="@string/msgContact"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/tittlepwd"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

</RelativeLayout>