<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:backgroundTint="#EAEFF0">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEFF0"
        app:columnCount="3"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:orientation="horizontal"
        app:rowCount="5">

            <Button
                android:id="@+id/numb1"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:outlineProvider="none"
                android:text="@string/_1"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb2"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:fontFamily="@font/flexo_bold"
                android:outlineProvider="none"
                android:text="@string/_2"
                android:textColor="@android:color/black"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb3"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:fontFamily="@font/flexo_bold"
                android:gravity="center"
                android:outlineProvider="none"
                android:text="@string/_3"
                android:textColor="@android:color/black"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb4"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:outlineProvider="none"
                android:text="@string/_4"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb5"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:gravity="center"
                android:text="@string/_5"
                android:outlineProvider="none"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb6"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:outlineProvider="none"
                android:text="@string/_6"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1"/>

            <Button
                android:id="@+id/numb7"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:outlineProvider="none"
                android:text="@string/_7"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb8"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:gravity="center"
                android:outlineProvider="none"
                android:text="@string/_8"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb9"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:fontFamily="@font/flexo_bold"
                android:outlineProvider="none"
                android:text="@string/_9"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb00"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_keyboard_estados"
                android:fontFamily="@font/flexo_bold"
                android:gravity="center"
                android:enabled="true"
                android:outlineProvider="none"
                android:text=""
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/numb0"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/flexo_bold"
                android:background="@drawable/btn_white_keyboard"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:outlineProvider="none"
                android:text="@string/_0"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/numbDelete"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_alfanumerico_grey"
                android:src="@drawable/ic_borrar_24dp"
                android:tint="@color/white"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="15dp"
               app:layout_columnSpan="3"
               app:layout_columnWeight="1"
               app:layout_rowWeight="1">

               <Button
                   android:id="@+id/continuar"
                   android:layout_width="fill_parent"
                   android:layout_height="55dp"
                   android:background="@drawable/btn_estados_continuar"
                   android:enabled="false"
                   android:fontFamily="@font/flexo_bold"
                   android:text="@string/continuar"
                   android:textColor="@android:color/white"
                   android:textSize="25sp"
                   android:textAllCaps="false" />

           </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>
