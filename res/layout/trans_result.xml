<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="visible"
        android:src="@drawable/ic_close_24dp"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/clickclose_transResult"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/linearTransOKUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dark"
            android:layout_gravity="center"/>

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/flexo_bold"
                android:text="@string/oprTerminate"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/msg_bienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/flexo_medium"
                android:text="@string/infoTrans"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:gravity="center"
                android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTransOKDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgCheckDos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_check_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/flexo_bold"
                android:layout_marginStart="15dp"
                android:text="@string/oprTerminate"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/msg_bienvenidaDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/flexo_medium"
                android:text="@string/infoTrans"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeTransFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/titleFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/flexo_bold"
            android:text="@string/transfail"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/linearfail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_below="@+id/titleFail"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/flexo_bold"
                android:text="@string/error"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/codFail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/flexo_bold"
                android:layout_marginStart="5dp"
                android:text="@string/exampleError"
                android:textColor="@color/orange"
                android:textSize="23sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/msgFail"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/flexo_medium"
            android:text="@string/msgExampleFail"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@+id/linearfail"
            android:layout_centerHorizontal="true"
            android:textSize="22sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearImprimirCombrobante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_linearlayout_white"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/flexo_medium"
            android:text="@string/quesCompro"
            android:textColor="@color/color_text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/result_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/background_btn_orange"
            android:fontFamily="@font/flexo_bold"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/background_btn_white"
            android:fontFamily="@font/flexo_bold"
            android:text="@string/not"
            android:textAllCaps="false"
            android:textColor="@color/color_text_gray"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>